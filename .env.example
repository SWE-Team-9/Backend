# Server
PORT=3000
NODE_ENV=development

# PostgreSQL (Prisma)
DATABASE_URL="postgresql://postgres:password@localhost:5432/soundcloud_clone?schema=public"

# MongoDB
MONGO_URI="mongodb://localhost:27017/soundcloud_clone"

# JWT
JWT_SECRET="replace_me"
REFRESH_TOKEN_SECRET="replace_me"
ACCESS_TOKEN_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Google OAuth
GOOGLE_CLIENT_ID="replace_me"
GOOGLE_CLIENT_SECRET="replace_me"
GOOGLE_CALLBACK_URL="http://localhost:3000/api/auth/google/callback"

# Email (Nodemailer) - example using Gmail SMTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="replace_me"
SMTP_PASS="replace_me"
EMAIL_FROM="no-reply@soundcloud-clone.local"

# CAPTCHA (choose one)
HCAPTCHA_SECRET="replace_me"
RECAPTCHA_SECRET="replace_me"

# Redis (BullMQ)
REDIS_URL="redis://localhost:6379"

# Cloudinary (images)
CLOUDINARY_CLOUD_NAME="replace_me"
CLOUDINARY_API_KEY="replace_me"
CLOUDINARY_API_SECRET="replace_me"

# S3 (audio)
AWS_REGION="replace_me"
AWS_ACCESS_KEY_ID="replace_me"
AWS_SECRET_ACCESS_KEY="replace_me"
AWS_S3_BUCKET="replace_me"

# Stripe
STRIPE_SECRET_KEY="replace_me"

# Firebase Admin (optional to enable push in dev)
FIREBASE_PROJECT_ID="replace_me"
FIREBASE_CLIENT_EMAIL="replace_me"
FIREBASE_PRIVATE_KEY="replace_me"
